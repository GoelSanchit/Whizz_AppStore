<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Medicine" >

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>




    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="top"
        android:scrollbars="vertical"
        android:text="This Application is basically designed for the medicines..
        Type all leters in small"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnListen" />

    <AutoCompleteTextView
        android:id="@+id/act"
        style="@style/CodeFont"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:ems="20"
        android:inputType="text"
        android:textColor="#642626"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar"
        android:layout_toLeftOf="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="105dp"
        android:layout_height="105dp"

        android:background="@drawable/rounded_button"
        android:text="FIND"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/act"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnListen"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:background="#3F51B5"
        android:text="Read For Me"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp" />

</RelativeLayout>