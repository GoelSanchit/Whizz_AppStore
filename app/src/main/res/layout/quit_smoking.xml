<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4CAF50"
    tools:context=".QuitActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="There are nearly 69 cancer-causing chemicals in the tobacco smoke.\n
\nSmoking increases the risk of lung cancer by nearly 15 to 30 times and also doubles the risk of heart attack.
\n\nThere is absolutely no safer limit of exposure to tobacco smoke and on average smokers die 13 to 14 years earlier.
\n\nSecondhand tobacco smoke causes approx. 600,000 premature deaths every year.
\n\nQuit smoking at the age of 30 to reduce the risk of premature death by nearly 90%.
\n\nQuitting at the age of 50 reduces the risk of premature death by 50%.
\n\nQuitting at the age of 60 and above still makes a difference and enhances the chance of living longer than those who continue to smoke."
        android:id="@+id/textView2"
        android:textColor="#fff"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignTop="@+id/spin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
